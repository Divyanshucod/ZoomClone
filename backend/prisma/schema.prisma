generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  username String
  meethings Meeting[]
}
model Meeting {
   id Int @id @default(autoincrement())
   meethingId String @unique
   author User @relation(fields: [hoster],references: [id])
   hoster Int
   members Member[]
}

model Member {
   id Int @id @default(autoincrement())
   memberId String @unique
   memberName String
   meething Meeting @relation(fields: [meethingId],references: [id])
   meethingId Int
}
